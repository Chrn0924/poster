<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">



    <com.make.poster.color.sliders.BrightnessSlideBar
        android:id="@+id/brightnessSlideBar"
        app:selector_BrightnessSlider="@drawable/wheel"
        app:borderColor_BrightnessSlider="@android:color/darker_gray"
        app:borderSize_BrightnessSlider="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.make.poster.color.sliders.BrightnessSlideBar >



    <LinearLayout
        android:id="@+id/mp_button_parent_view"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/mp_button_child_add_backgroud"
            android:gravity="center"
            android:text="添加背景图"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/mp_button_child_add_textview"
            android:gravity="center"
            android:text="添加文字"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/mp_button_child_add_image"
            android:gravity="center"
            android:text="添加图片"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

</RelativeLayout>