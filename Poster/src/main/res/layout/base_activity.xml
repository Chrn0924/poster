<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/base_activity_parent"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/base_activity_back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/back">

            </ImageView>

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/base_activity_title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:text="标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:id="@+id/base_activity_share"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/base_share_button"
                android:text="分享"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="25dp">

            </TextView>


        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/basechild_framelayout"
        android:layout_below="@id/base_activity_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>