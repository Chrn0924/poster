<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
      android:id="@+id/colorPickerViewFrame"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.make.poster.color.ColorPickerView
        android:id="@+id/colorPickerView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:selector="@drawable/wheel" />

    </FrameLayout>

    <FrameLayout
      android:id="@+id/alphaSlideBarFrame"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.make.poster.color.sliders.AlphaSlideBar
        android:id="@+id/alphaSlideBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        app:selector_AlphaSlideBar="@drawable/wheel" />
    </FrameLayout>

    <FrameLayout
      android:id="@+id/brightnessSlideBarFrame"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.make.poster.color.sliders.BrightnessSlideBar
        android:id="@+id/brightnessSlideBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        app:selector_BrightnessSlider="@drawable/wheel" />
    </FrameLayout>

    <Space
      android:id="@+id/space_bottom"
      android:layout_width="match_parent"
      android:layout_height="10dp" />

  </LinearLayout>

</ScrollView>
